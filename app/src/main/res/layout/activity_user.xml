<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">
    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        app:qmui_topbar_title_color="@color/white"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_below="@id/topbar_user">

        <TextView

            android:layout_marginTop="@dimen/my_login_margintop"
            android:layout_width="100dp"
            android:layout_height="@dimen/my_login_height"
            android:id="@+id/tv_username_user_view"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:text="学号/工号"
            android:background="@drawable/register"
            android:paddingLeft="@dimen/my_login_padding_left_right"
            android:paddingRight="@dimen/my_login_padding_left_right"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_toRightOf="@id/tv_username_user_view"
            android:layout_marginTop="@dimen/my_login_margintop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_login_height"
            android:id="@+id/tv_username_user"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:background="@drawable/register"
            android:paddingLeft="@dimen/my_login_padding_left_right"
            android:paddingRight="@dimen/my_login_padding_left_right"
            android:maxLines="1"
            android:gravity="center_vertical"
            />

        <TextView

            android:layout_below="@id/tv_username_user_view"
            android:layout_marginTop="@dimen/my_login_margintop"
            android:layout_width="100dp"
            android:layout_height="@dimen/my_login_height"
            android:id="@+id/tv_name_user_view"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:text="姓名"
            android:background="@drawable/register"
            android:paddingLeft="@dimen/my_login_padding_left_right"
            android:paddingRight="@dimen/my_login_padding_left_right"
            android:maxLines="1"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_below="@id/tv_username_user_view"
            android:layout_toRightOf="@id/tv_name_user_view"
            android:layout_marginTop="@dimen/my_login_margintop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_login_height"
            android:id="@+id/tv_name_user"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:background="@drawable/register"
            android:paddingLeft="@dimen/my_login_padding_left_right"
            android:paddingRight="@dimen/my_login_padding_left_right"
            android:maxLines="1"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_identity_user_view"
            android:layout_width="100dp"
            android:layout_height="@dimen/my_login_height"
            android:text="注册身份"
            android:textSize="@dimen/my_text_size"
            android:gravity="center_vertical"
            android:background="@drawable/register"
            android:layout_below="@id/tv_name_user_view"
            android:layout_marginTop="@dimen/my_login_margintop"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/my_login_padding_left_right"

            />


        <TextView
            android:layout_toRightOf="@id/tv_identity_user_view"
            android:id="@+id/tv_identity_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_login_height"
            android:textSize="@dimen/my_text_size"
            android:gravity="center_vertical"
            android:background="@drawable/register"
            android:layout_below="@id/tv_name_user_view"
            android:layout_marginTop="@dimen/my_login_margintop"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/my_login_padding_left_right"

            />




        <TextView
            android:layout_below="@id/tv_identity_user_view"
            android:layout_marginTop="@dimen/my_login_margintop"
            android:layout_width="100dp"
            android:layout_height="@dimen/my_login_height"
            android:id="@+id/tv_email_user_view"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:text="邮箱"
            android:background="@drawable/register"
            android:paddingLeft="@dimen/my_login_padding_left_right"
            android:paddingRight="@dimen/my_login_padding_left_right"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_toRightOf="@id/tv_email_user_view"
            android:layout_below="@id/tv_identity_user_view"
            android:layout_marginTop="@dimen/my_login_margintop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_login_height"
            android:id="@+id/tv_email_user"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:background="@drawable/register"
            android:paddingLeft="@dimen/my_login_padding_left_right"
            android:paddingRight="@dimen/my_login_padding_left_right"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_below="@id/tv_email_user_view"
            android:layout_marginTop="@dimen/my_login_margintop"
            android:layout_width="100dp"
            android:layout_height="@dimen/my_login_height"
            android:id="@+id/tv_phone_user_view"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:text="手机号"
            android:background="@drawable/register"
            android:paddingLeft="@dimen/my_login_padding_left_right"
            android:paddingRight="@dimen/my_login_padding_left_right"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_toRightOf="@id/tv_phone_user_view"
            android:layout_below="@id/tv_email_user_view"
            android:layout_marginTop="@dimen/my_login_margintop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_login_height"
            android:id="@+id/tv_phone_user"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:background="@drawable/register"
            android:paddingLeft="@dimen/my_login_padding_left_right"
            android:paddingRight="@dimen/my_login_padding_left_right"
            android:gravity="center_vertical"
            />
        </RelativeLayout>

</RelativeLayout>
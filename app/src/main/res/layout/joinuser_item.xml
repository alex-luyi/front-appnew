<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item"
    android:layout_marginTop="@dimen/my_login_margintop"
    android:layout_marginLeft="@dimen/my_login_margintop"
    android:layout_marginRight="@dimen/my_login_margintop"
    android:gravity="center_vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="@dimen/item_right_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/tv_username_joinuser"
        android:gravity="center"
        android:textColor="@color/bpink"
        android:textSize="@dimen/my_text_size"
        android:paddingEnd="@dimen/list_padding"
        />

    <TextView
        android:layout_toRightOf="@id/tv_username_joinuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_joinuser"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/my_text_size"
        android:background="@null"
        />

















</RelativeLayout>
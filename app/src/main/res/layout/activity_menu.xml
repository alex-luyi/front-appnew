<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_na"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.qmuiteam.qmui.widget.QMUITopBar
            android:id="@+id/topbar_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/topbar_height"
            app:qmui_topbar_title_color="@color/white"
            />
            <androidx.viewpager.widget.ViewPager
                android:layout_below="@id/topbar_menu"
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp" tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="8dp">

            </androidx.viewpager.widget.ViewPager>

            <LinearLayout
                android:layout_marginTop="165dp"
                android:layout_below="@id/topbar_menu"
                android:weightSum="10"
                android:background="#33000000"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView

                    android:layout_weight="8"
                    android:id="@+id/tv_pager_title"
                    android:text="图片标题"
                    android:paddingLeft="8dip"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="0dp" android:layout_height="35dip"/>
                <!--用来动态添加轮播小点-->
                <LinearLayout
                    android:id="@+id/lineLayout_dot"
                    android:layout_weight="2"
                    android:gravity="center|right"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:orientation="horizontal"
                    android:layout_width="0dp" android:layout_height="match_parent">
                </LinearLayout>

            </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/my_login_margintop"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/viewPager"
            android:text="热门活动TOP7"
            android:textStyle="bold"
            android:textColor="@color/bpink"
            android:textSize="@dimen/my_text_size"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:drawableRight="@drawable/fire"
            android:id="@+id/tv_topview"

            />
        <TextView
            android:layout_below="@id/tv_topview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/menu_top"
           />

        <TextView
            android:id="@+id/menu_top1_view"
            android:layout_below="@id/tv_topview"
            android:layout_width="100dp"
            android:layout_height="@dimen/top_height"
            android:text="TOP 1"
            android:textSize="@dimen/my_text_size"
            android:gravity="center"
            android:background="@color/mypink3"

            />

        <TextView
            android:layout_below="@id/tv_topview"
            android:layout_toRightOf="@id/menu_top1_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:id="@+id/tv_top1"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/mypink3"
            />

        <TextView
            android:id="@+id/menu_top2_view"
            android:layout_below="@id/tv_top1"
            android:layout_width="100dp"
            android:layout_height="@dimen/top_height"
            android:text="TOP 2"
            android:textSize="@dimen/my_text_size"
            android:gravity="center"
            android:background="@drawable/menu_top"
            />

        <TextView
            android:layout_below="@id/tv_top1"
            android:layout_toRightOf="@id/menu_top1_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:id="@+id/tv_top2"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/menu_top"
            />
        <TextView
            android:id="@+id/menu_top3_view"
            android:layout_below="@id/tv_top2"
            android:layout_width="100dp"
            android:layout_height="@dimen/top_height"
            android:text="TOP 3"
            android:textSize="@dimen/my_text_size"
            android:gravity="center"
            android:background="@color/mypink3"
            />

        <TextView
            android:layout_below="@id/tv_top2"
            android:layout_toRightOf="@id/menu_top1_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:id="@+id/tv_top3"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/mypink3"
            />
        <TextView
            android:id="@+id/menu_top4_view"
            android:layout_below="@id/tv_top3"
            android:layout_width="100dp"
            android:layout_height="@dimen/top_height"
            android:text="TOP 4"
            android:textSize="@dimen/my_text_size"
            android:gravity="center"
            android:background="@drawable/menu_top"
            />

        <TextView
            android:layout_below="@id/tv_top3"
            android:layout_toRightOf="@id/menu_top1_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:id="@+id/tv_top4"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/menu_top"
            />

        <TextView
            android:id="@+id/menu_top5_view"
            android:layout_below="@id/tv_top4"
            android:layout_width="100dp"
            android:layout_height="@dimen/top_height"
            android:text="TOP 5"
            android:textSize="@dimen/my_text_size"
            android:gravity="center"
            android:background="@color/mypink3"
            />

        <TextView
            android:layout_below="@id/tv_top4"
            android:layout_toRightOf="@id/menu_top1_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:id="@+id/tv_top5"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/mypink3"
            />

        <TextView
            android:id="@+id/menu_top6_view"
            android:layout_below="@id/tv_top5"
            android:layout_width="100dp"
            android:layout_height="@dimen/top_height"
            android:text="TOP 6"
            android:textSize="@dimen/my_text_size"
            android:gravity="center"
            android:background="@drawable/menu_top"
            />

        <TextView
            android:layout_below="@id/tv_top5"
            android:layout_toRightOf="@id/menu_top1_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:id="@+id/tv_top6"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/menu_top"
            />

        <TextView
            android:id="@+id/menu_top7_view"
            android:layout_below="@id/tv_top6"
            android:layout_width="100dp"
            android:layout_height="@dimen/top_height"
            android:text="TOP 7"
            android:textSize="@dimen/my_text_size"
            android:gravity="center"
            android:background="@color/mypink3"
            />

        <TextView
            android:layout_below="@id/tv_top6"
            android:layout_toRightOf="@id/menu_top1_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:id="@+id/tv_top7"
            android:textSize="@dimen/my_text_size"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/mypink3"
            />

        <RelativeLayout
            android:layout_below="@id/tv_top7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/end_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动预告"
                android:textColor="@color/gray"
                android:textSize="@dimen/my_text_size"
                android:textAlignment="center"
                android:drawableTop="@drawable/end_yugao"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:layout_marginLeft="@dimen/menu_x"
                android:layout_toRightOf="@id/end_list"
                android:id="@+id/end_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="发起活动"
                android:textColor="@color/gray"
                android:textSize="@dimen/my_text_size"
                android:textAlignment="center"
                android:drawableTop="@drawable/end_faqi"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                />



            <TextView
                android:layout_marginLeft="@dimen/menu_x"
                android:layout_toRightOf="@id/end_add"
                android:id="@+id/end_his"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="历史活动"
                android:textColor="@color/gray"
                android:textSize="@dimen/my_text_size"
                android:textAlignment="center"
                android:drawableTop="@drawable/end_lishi"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:layout_marginLeft="@dimen/menu_x"
                android:layout_toRightOf="@id/end_his"
                android:id="@+id/end_user"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="个人中心"
                android:textColor="@color/gray"
                android:textSize="@dimen/my_text_size"
                android:textAlignment="center"
                android:drawableTop="@drawable/end_geren"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                />
        </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>




    <com.google.android.material.navigation.NavigationView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/head"
        app:menu="@menu/menu_nav">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
